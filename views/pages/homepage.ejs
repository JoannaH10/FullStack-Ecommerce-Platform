<section id="bundles" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-blue-600 mb-4">Snack Bundles</h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Save big with our curated snack bundles from around the world</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 bundles-grid">
            <% if (bundles && bundles.length > 0) { %>
                <% bundles.forEach(function(bundle) { %>
                    <div class="bundle-card">
                        <div class="bundle-inner relative w-full h-96 rounded-xl shadow-lg">
                            <div class="bundle-front absolute w-full h-full bg-blue-50 rounded-xl p-6 flex flex-col">
                                <div class="flex-grow flex items-center justify-content-center">
                                    <img src="<%= bundle.image %>"
                                        alt="<%= bundle.title %>" class="w-full h-48 object-contain">
                                </div>
                                <h3 class="text-xl font-bold text-gray-800 mb-2 text-center"><%= bundle.title %></h3>
                                <div class="text-center">
                                    <span class="text-xl font-bold text-blue-600"><%= typeof bundle.price === 'number' ? bundle.price.toFixed(2) : bundle.price %> EGP</span>
                                    <% if (bundle.originalPrice) { %>
                                        <span class="text-sm text-gray-500 line-through ml-2"><%= typeof bundle.originalPrice === 'number' ? bundle.originalPrice.toFixed(2) : bundle.originalPrice %> EGP</span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="bundle-back absolute w-full h-full text-white rounded-xl p-6 flex flex-col justify-center">
                                <h3 class="text-xl font-bold mb-4 text-center">Bundle Description</h3>
                                <p class="text-white text-center flex-grow overflow-y-auto mb-6"><%= bundle.description %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="col-span-full text-center">No bundles found. Check back later!</p>
            <% } %>
        </div>

        <div class="text-center mt-12">
            <a href="/bundles" class="bundle-btn">View All Bundles</a>
        </div>
    </div>
</section>

