<section class="reviews-section">
    <h2>What Our Customers Say</h2>
    <div class="reviews-container">
        <% if (reviews && reviews.length > 0) { %>
            <% reviews.forEach(function(review) { %>
                <div class="review-card">
                    <div class="card-inner">
                        <div class="card-front">
                            <%
                                let profilePicSrc = review.user && review.user.profilePicture
                                    ? review.user.profilePicture
                                    : '/images/homepage/avatar_man.png';
                            %>
                            <img src="<%= profilePicSrc %>" alt="<%= review.user ? review.user.name : 'Anonymous' %>">
                            <h3><%= review.user ? review.user.name : 'Anonymous' %></h3>
                            <p><strong><%= review.reviewerType %></strong></p>
                            <p class="review-text">"<%= review.reviewText %>"</p>
                            <div class="rating">
                                <%
                                    // Function to render stars based on rating number
                                    function renderStars(rating) {
                                        let stars = '';
                                        for (let i = 0; i < 5; i++) {
                                            if (i < rating) {
                                                stars += '★'; // Filled star
                                            } else {
                                                stars += '☆'; // Empty star (or just ' ')
                                            }
                                        }
                                        return stars;
                                    }
                                %>
                                <%= renderStars(review.rating) %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No reviews available yet. Be the first to leave one!</p>
        <% } %>
    </div>
    <div class="review-nav-buttons d-flex justify-content-center mt-4 gap-4">
        <button class="btn btn-outline-primary btn-icon" id="reviewScrollLeftBtn">
            <i class="fas fa-hand-point-left"></i>
        </button>
        <button class="btn btn-outline-primary btn-icon" id="reviewScrollRightBtn">
            <i class="fas fa-hand-point-right"></i>
        </button>
    </div>
</section>

