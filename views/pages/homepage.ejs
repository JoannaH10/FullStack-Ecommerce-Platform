<section class="homepage-carousel-container">
    <div id="homepage-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <% if (carouselItems && carouselItems.length > 0) { %>
                <% carouselItems.forEach((item, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img class="carousel-image" src="<%= item.imageSrc %>" alt="<%= item.altText %>">
                        <div class="carousel-caption-container d-flex flex-column align-items-center justify-content-center">
                            <div class="carousel-caption-content">
                                <h4 class="carousel-subtitle"><%= item.subtitle %></h4>
                                <h1 class="carousel-title"><%= item.title %></h1>
                                <a href="<%= item.buttonLink %>" class="carousel-btn btn-primary"><%= item.buttonText %></a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="carousel-item active d-flex justify-content-center align-items-center" style="min-height: 400px; background-color: #f0f0f0; color: #6c757d;">
                    <div class="text-center">
                        <h2>No exciting new snacks to display right now!</h2>
                        <p>Please check back soon for delicious updates.</p>
                    </div>
                </div>
            <% } %>
        </div>

        <a class="carousel-control-prev" href="#homepage-carousel" data-slide="prev">
            <div class="carousel-nav-btn prev-btn">
                <span class="carousel-control-prev-icon"></span>
            </div>
        </a>
        <a class="carousel-control-next" href="#homepage-carousel" data-slide="next">
            <div class="carousel-nav-btn next-btn">
                <span class="carousel-control-next-icon"></span>
            </div>
        </a>
    </div>
</section>

<section class="trending-products">
    <div class="container">
        <h2>BEST SELLERS</h2>

        <div class="slider-wrapper position-relative">
            <button class="slide-btn prev-btn">&#10094;</button>

            <div class="product-list d-flex" id="productList">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="circle-product" data-product-id="<%= product._id %>">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="product-img">
                            </div>
                    <% }); %>
                <% } else { %>
                    <p>No best seller products available at the moment.</p>
                <% } %>
            </div>

            <button class="slide-btn next-btn">&#10095;</button>
        </div>
    </div>
</section>

